{
    "name": "Spellbender",
    "description": "Secret: When an enemy casts a spell on a minion, summon a 1/3 as the new target.",
    "class": "mage",
    "type": "spell",
    "manaCost": 3,
    "secret": {
        "start-play-card": {
            "filter": [
                "GameEventFilters.HAS_DIFFERENT_OWNER_PLAYER",
                "GameEventFilters.SELF_BOARD_IS_NOT_FULL",
                "GameEventFilters.CARD_TARGET_IS_MINION",
                "GameEventFilters.EVENT_SOURCE_IS_SPELL"
            ],
            "action": {
                "class": "GameEventActions.summonNewTargetForCardPlay",
                "minion": "Spellbender/Minion"
            }
        }
    }
}
